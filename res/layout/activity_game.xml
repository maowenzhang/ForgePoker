<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="0dp"
    tools:context=".GameActivity" >

    <!-- Here is where we put the SurfaceView, in a frame so that we can
         stack other views on top of it. -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
            
	    <com.forgepoker.GameView
	        android:id="@+id/gameview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" />
	
	    <LinearLayout	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center" >
	
	        <Button
	            android:id="@+id/button_score1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="1分"
	            android:background="@drawable/translucent_background"
	            android:textColor="@drawable/button_textcolor" />
	
		    <Button
		        android:id="@+id/button_score2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="2分"/>
		    <Button
		        android:id="@+id/button_score3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="3分"/>
		    <Button
		        android:id="@+id/button_scoreNo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="不叫"/>
	    </LinearLayout>
	    
    </FrameLayout>
    
</RelativeLayout>
